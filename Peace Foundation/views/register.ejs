<title>Register Page</title>
<body class="container">
    <a href="/" class="btn1"><b>Home</b></a>
    <div class="row mt-5">
        <div class="col-md-6 m-auto">
            <div class="card card-body">
                <img src="/img/reglogo.png" alt="" >
    <!-- or you can use (inclued ./partials/messages.ejs) will get same result -->
                <% if(typeof errors != 'undefined'){ %>
                    <% errors.forEach(function(error){ %>
                        <div class="alert alert-warning alert-dismissible fade show" role="alert">
                            <%= error.msg %>
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    <% }); %>
                <% } %>

                <% if(success_msg != ''){ %>
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <%= success_msg %>
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
            <% } %>

            <% if(error_msg != ''){ %>
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <%= error_msg %>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
        <% } %>
                
                <form action="/users/register" method="POST">
                    <div class="form-group">
                        <label for="name" style="color: rgb(255, 255, 255);"><b>Full Name<b></label>
                        <input 
                            type="name"
                            id="name"
                            name="name"
                            class="form-control"
                            placeholder="Enter Name"
                            value="<%= typeof name != 'undefined' ? name: '' %>"/>
                    </div>
                    <div class="form-group">
                      <label for="name" style="color: white">Mobile Number</label>
                      <input 
                          type="number"
                          id="phone"
                          name="phone"
                          class="form-control"
                          placeholder="Enter Mobile Number"
                          value="<%= typeof name != 'undefined' ? name: '' %>"/>
                  </div>

                    <div class="form-group">
                        <label for="email" style="color: white">Email</label>
                        <input 
                            type="email"
                            id="email"
                            name="email"
                            class="form-control"
                            placeholder="Enter Email Address"
                            value="<%= typeof email != 'undefined' ? email: '' %>"/>
                    </div>
                    <div class="form-group">
                      <label for="name" style="color: white">Government ID Name</label>
                      <input 
                          type="text"
                          id="governmentIdName"
                          name="governmentIdName"
                          class="form-control"
                          placeholder="Enter Government ID Name"
                          value="<%= typeof name != 'undefined' ? name: '' %>"/>
                  </div>
                  <div class="form-group">
                    <label for="name" style="color: white">Government ID Number</label>
                    <input 
                        type="text"
                        id="governmentIdNo"
                        name="governmentIdNo"
                        class="form-control"
                        placeholder="Enter Government ID Number"
                        value="<%= typeof name != 'undefined' ? name: '' %>"/>
                </div>
                    <div class="form-group">
                        <label for="password" style="color: white">Password</label>
                        <input 
                            type="password"
                            name="password"
                            id="password"
                            class="form-control"
                            placeholder="Create Password"
                            value="<%= typeof password != 'undefined' ? password: '' %>"/>
                    </div>
                    <div class="form-group">
                        <label for="password2" style="color: white">Confirm Password</label>
                        <input 
                            type="password"
                            name="password2"
                            id="password2"
                            class="form-control"
                            placeholder="Confirm Password"
                            value="<%= typeof password != 'undefined' ? password: '' %>"/>
                    </div>
                    <button type="submit" class="btn btn-block" style="color: white; font-family: Lora">Register</button>
                </form>
                <p class="lead mt-4" style="color: white; font-weight:bold">
                    Have an Account?
                    <a href="/users/login">Login</a>
                </p>
            </div>
        </div>
    </div>
</body>>
