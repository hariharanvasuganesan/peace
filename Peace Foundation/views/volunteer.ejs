<link href="https://fonts.googleapis.com/css2?family=Lora&display=swap" rel="stylesheet">
<link rel="stylesheet" href="/css/volunteer.css">

<title>Volunteer Page</title>
<body class="container">
    <a href="/" class="btn1"><b>Home</b></a>
    <div class="row mt-5">
        <div class="col-md-6 m-auto">
            <div class="card card-body">
                <img src="/img/vlnt.png" alt="" >
    
                <%- include('partials/messages'); %>
                
                <form action="/users/volunteer" method="POST">
                    <div class="form-group">
                        <label for="name" style="color: rgb(255, 255, 255);"><b>Full Name<b></label>
                        <input 
                            type="name"
                            id="name"
                            name="name"
                            class="form-control"
                            placeholder="Enter Name"
                            value="<%= typeof name != 'undefined' ? name: '' %>"/>
                    </div>
                    <div class="form-group">
                      <label for="phone" style="color: white">Mobile Number</label>
                      <input 
                          type="number"
                          id="phone"
                          name="phone"
                          class="form-control"
                          placeholder="Enter Mobile Number"
                          value="<%= typeof phone != 'undefined' ? phone: '' %>"/>
                  </div>

                    <div class="form-group">
                        <label for="email" style="color: white">Email</label>
                        <input 
                            type="email"
                            id="email"
                            name="email"
                            class="form-control"
                            placeholder="Enter Email Address"
                            value="<%= typeof email != 'undefined' ? email: '' %>"/>
                    </div>
                    <div class="form-group">
                      <label for="specialization" style="color: white">Specialization</label>
                      <input 
                          type="text"
                          id="specialization"
                          name="specialization"
                          class="form-control"
                          placeholder="Enter Specialization"
                          value="<%= typeof specialization != 'undefined' ? specialization: '' %>"/>
                  </div>
                  <button type="submit" class="btn btn-block" style="color: white; font-family: Lora">Register</button>
                </form>
            </div>
        </div>
    </div>
</body>>
